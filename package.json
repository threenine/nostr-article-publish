		"builtin-modules": "3.3.0",
		"esbuild": "0.17.3",
		"obsidian": "latest",
		"tslib": "2.4.0",
		"typescript": "^5.7.3"
	},
	"dependencies": {
		"@noble/hashes": "^1.7.1",
		"@noble/secp256k1": "^2.2.3",
		"base64-arraybuffer": "^1.0.2",
		"bech32": "^2.0.0",
